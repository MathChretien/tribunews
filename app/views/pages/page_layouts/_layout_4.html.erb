
<div class="layout" id="layout_04">

  <div class="photo-box pic photobook_pic" id="box_04_01" data-chosen="true" data-boxes="true" data-box-number="<%= @page.boxes.first.id%>">
    <% if @pic_boxes[0].nil? %>
    <% else %>
    <%= cl_image_tag(@pic_boxes[0].picture.photo, crop: :fill, gravity: :face, width:500, height: 300, id:"cl_04_01") %>
    <%end%>
  </div>

  <%= simple_form_for(@text_boxes[0]) do |f| %>
  <div class="box text" content-editable = "true" id="box_04_02">
    <p><%= @text_boxes[0].content_text %></p>
  </div>
  <%= f.hidden_field :content_text, value: "" %>
  <% end %>

  <div class="photo-box pic photobook_pic" id="box_04_02" data-chosen="true" data-boxes="true" data-box-number="<%= @page.boxes.second.id%>">
   <% if @pic_boxes[1].nil? %>
   <% else %>
   <%= cl_image_tag(@pic_boxes[1].picture.photo, crop: :fill, gravity: :face, width:500, height: 270, id:"cl_04_01") %>
   <%end%>
 </div>
</div>


